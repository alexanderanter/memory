    "casper-chai": "^0.2.1",
    "casperjs": "^1.1.0-beta3",
    "chai": "^3.4.0",
    "http-server": "^0.8.5",
    "mocha": "^2.3.3",
    "mocha-casperjs": "^0.5.4",
    "mocha-phantomjs": "^4.0.1",
